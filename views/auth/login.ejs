<div class="main container clearfix">
<% if (errors) {%>
  <% errors.forEach(function (error) { %>
    <%= __(error) %>
  <% }) %>
<% } %>

<!-- Default home page -->

  <h1>Log In</h1>

  <form class="form-horizontal" action="/auth/local" method="post">
    <input type="hidden" name="_csrf" value="<%= _csrf %>">
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Username or Email</label>
      <div class="col-sm-10">
        <input type="email" class="form-control" id="inputEmail3" placeholder="Username or Email" name="identifier" >
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-10">
        <input type="password" name="password" class="form-control" id="inputPassword3" placeholder="Password">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <label>
            <input type="checkbox"> Remember me
          </label>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Sign in</button>
      </div>
    </div>
  </form>



  <% if (Object.keys(providers).length) {%>
    <h4>You can also use one of these...</h4>

    <% Object.keys(providers).forEach(function (key) { %>
      <a href="/auth/<%= providers[key].slug %>" role="button"><%= providers[key].name %></a>
    <% }) %>
  <% } %>
</div>
